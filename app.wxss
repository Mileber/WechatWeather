/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.weather-list {
  display: block;
  padding: 40rpx;
  width: 100vw;
  margin: 0 auto;
}
.weather-item {
  display: flex;
  flex-direction: row;
  flex-basis: 1;
  justify-content: space-around;
  align-items: stretch;
  width: 80 vw;
  padding: 20rpx;
  border-bottom: 1rpx solid #ededed;
}
.basic {
  vertical-align: middle;
  flex-grow: 1;
}
